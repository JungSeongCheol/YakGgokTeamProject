                    <ViewCell>
                        <StackLayout Orientation="Vertical" HorizontalOptions="Fill" BackgroundColor="AliceBlue" >

                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>-->
        <!--<Button Text="Navigate to MainPage" Command="{Binding NavigateCommand}"/>-->
        <zxing:ZXingBarcodeImageView WidthRequest="300" HeightRequest="100" BarcodeValue="{Binding QRString}"
                                         BarcodeFormat="QR_CODE"/>
    </StackLayout>
    
</ContentPage>