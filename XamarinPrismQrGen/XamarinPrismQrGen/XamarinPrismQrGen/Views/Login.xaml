<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="XamarinPrismQrGen.Views.Login"
             Title="LoginPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" FontSize="50" Text="약꾹앱 로그인" HorizontalOptions="Center">
        </Label>
        <Frame Grid.Row="2" BackgroundColor="AliceBlue">
            <StackLayout>
                <Entry Placeholder="UserId" Text="{Binding UserId}"/>
                <Entry Placeholder="PassWord" IsPassword="True" Text="{Binding UserPwd}"/>
            </StackLayout>
        </Frame>
        <Grid Grid.Row="3">
            <Button Text="Login" BorderWidth="5" CornerRadius="5" Margin="60" Command="{Binding NavigateCommand}"/>
        </Grid>
    </Grid>
</ContentPage>